{
  "compilerOptions": {
    /* Base Options */
    "target": "es2022",
    "module": "commonjs", // ALTERADO
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    /* Strictness */
    "strict": true,
    /* Module Resolution */
    "moduleResolution": "node", // ALTERADO
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Other */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "node_modules/@prisma/client/index.d.ts"
  ], // ALTERADO
  "exclude": [
    "node_modules"
  ]
}